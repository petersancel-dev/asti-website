// Helper to get programme by ID
export function getProgrammeDetail(id: string): ProgrammeDetail | undefined {
    return PROGRAMME_DETAILS[id];
}

// Get all programme IDs for static generation
export function getAllProgrammeIds(): string[] {
    return Object.keys(PROGRAMME_DETAILS);
}
