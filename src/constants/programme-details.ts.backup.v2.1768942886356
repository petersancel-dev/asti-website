// =============================================================================
// PROGRAMME DETAILS - Extended data for individual programme pages
// Ground truth data structure for rich reading experience
// TVET-ALIGNED ONLY - Reconciled with TVET Document
// =============================================================================

export interface ProgrammeModule {
    id: string;
    title: string;
    description: string;
    hours: number;
    topics: string[];
}

export interface CareerOutcome {
    title: string;
    description: string;
    averageSalary?: string;
}

export interface ProgrammeDetail {
    id: string;
    title: string;
    subtitle?: string;
    level: 'introductory' | 'certificate' | 'diploma';
    levelLabel: string;
    category: string;
    categoryLabel: string;

    // Hero section
    heroImage?: string;
    heroVideo?: string;
    tagline: string;

    // Overview
    description: string;
    highlights: string[];

    // Logistics
    duration: string;
    credits?: number;
    totalHours?: number;
    startDates: string[];
    delivery: ('online' | 'face-to-face' | 'hybrid')[];
    schedule?: string;

    // Curriculum
    modules: ProgrammeModule[];

    // Requirements
    entryRequirements: string[];
    matureEntry?: string;
    documentsRequired: string[];

    // Outcomes
    careerOutcomes: CareerOutcome[];
    certifications?: string[];

    // Pricing
    tuitionFee: number;
    currency: string;
    registrationFee: number;
    paymentPlans?: {
        name: string;
        downPayment: number;
        installments: number;
        installmentAmount: number;
    }[];

    // Accreditation
    accreditedBy: string[];

    // Related
    relatedProgrammes: string[];

    // SEO
    metaDescription?: string;
    keywords?: string[];
}

// =============================================================================
// TVET-ALIGNED PROGRAMME DETAILS ONLY
// =============================================================================

